{
  "compilerOptions": {
    // Default
    "target": "ES6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "allowJs": true,
    "skipLibCheck": true,
    // paths
    "baseUrl": "src",
    "paths": {
      "@components/*": ["./components/*"],
      "@icons/*": ["./icons/*"],
      "@hooks/*": ["./hooks/*"],
      "@utils/*": ["./utils/*"],
      "@const/*": ["./constants/*"]
    },
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true
  },
  "include": ["custom.d.ts", "src"]
}
